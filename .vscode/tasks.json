// https://code.visualstudio.com/docs/editor/tasks#_custom-tasks
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Parcel development server",
            "type": "shell",
            "group": "build",
            /*
            https://parceljs.org/features/cli/
            https: //parceljs.org/features/development/#dev-server
            The targets (HTML files) are specified in package.json in 'source'.
            */
            "command": "npx parcel serve",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}