{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // https://code.visualstudio.com/docs/editor/tasks#_custom-tasks
    // https://graphviz.org/documentation/
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate graphviz",
            "type": "shell",
            "command": "C:\\Users\\pfrou\\Downloads\\stable_windows_10_msbuild_Release_Win32_graphviz-2.49.3-win32\\Graphviz\\bin\\dot.exe",
            "args": [
                "-Tsvg",
                "-o",
                "graphvizOutput.svg",
                "graphviz-input.gv"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            // https://code.visualstudio.com/docs/languages/css#_step-3-create-tasksjson
            "label": "Sass Compile",
            "type": "shell",
            // https://sass-lang.com/documentation/cli/dart-sass#many-to-many-mode
            "command": "sass public_html/operator/scss:public_html/operator/css public_html/presentation/scss:public_html/presentation/css public_html/moneyOverride/scss:public_html/moneyOverride/css",
            "group": "build"
        },
        {
            "label": "rollup",
            "type": "shell",
            "group": "build",
            "command": "rollup --config rollup.config.js",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}